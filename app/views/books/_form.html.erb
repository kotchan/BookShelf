<%#= form_with(model: book, local: true) do |form| %>
  <%# if book.errors.any? %>
    <%#div id="error_explanation">
      <%#h2><%= pluralize(book.errors.count, "error") %> <%#/h2>

      <%#ul>
      <%# book.errors.full_messages.each do |message| %#>
        <%#li><%= message %><%#/li>
      <%# end %>
      <%#/ul>
    </div>
  <% end %>

  <%#div class="field">
    <%#= form.label :title %>
    <%#= form.text_field :title, id: :book_title %>
  <%#/div>

  <%#div class="field">
    <%#= form.label :author %>
    <%#= form.text_field :author, id: :book_author %>
  <%#/div>

  <%#div class="actions">
    <%#= form.submit %>
  <%#/div>
<%# end %>

<%= simple_form_for(book) do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.association :categories, as: :select, multiple: true %>
  <div class="actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>
